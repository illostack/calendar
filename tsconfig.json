{
  "compilerOptions": {
    "declarationMap": true,
    "composite": true,
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true
  }
}
